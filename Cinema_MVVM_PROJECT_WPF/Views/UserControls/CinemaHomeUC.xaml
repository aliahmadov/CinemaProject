<UserControl x:Class="Cinema_MVVM_PROJECT_WPF.Views.UserControls.CinemaHomeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cinema_MVVM_PROJECT_WPF.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel  Width="480" Background="{StaticResource mainColor}" Orientation="Horizontal"
                     HorizontalAlignment="Center">
            <Button Command="{Binding AdminCommand}" FontFamily="Calibri" Foreground="{StaticResource secondColor}" Background="{StaticResource thirdColor}" FontWeight="ExtraBold" Margin="30" Height="75" Width="180"  Style="{StaticResource NewGameButtonStyle}" FontSize="50">Admin</Button>
            <Button FontFamily="Calibri"  Foreground="{StaticResource secondColor}" Background="{StaticResource thirdColor}" FontWeight="ExtraBold" Margin="30" Height="75" Width="180" Style="{StaticResource NewGameButtonStyle}" FontSize="50">User</Button>
        </StackPanel>
    </Grid>
</UserControl>
